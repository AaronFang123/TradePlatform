<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.page.feedback.FeedbackActivity">

    <!--    <View-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="20dp"-->
    <!--        android:background="@color/light_blue"/>-->

    <LinearLayout
        android:background="@color/light_blue"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:fitsSystemWindows="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_weight="1"
            android:id="@+id/custom_back"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:src="@drawable/back"
            android:textColor="#FFF"
            android:contentDescription="TODO" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="5"
            android:text="联系客服"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#FFF"/>
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系方式"/>

            <LinearLayout
                android:padding="3dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:background="#FFF"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="10"
                    android:gravity="start|center_vertical"
                    android:text="联系人"
                    android:textColor="@color/pure_black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/custom_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="10"
                    android:background="#FFF"
                    android:gravity="start|center_vertical"
                    android:hint="请输入您的姓名"
                    android:textColor="@color/background_dark_gray"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:padding="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFF"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="10"
                    android:gravity="start|center_vertical"
                    android:text="邮箱"
                    android:textColor="@color/pure_black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/custom_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="10"
                    android:background="#FFF"
                    android:gravity="start|center_vertical"
                    android:hint="请输入您的邮箱"
                    android:textColor="@color/background_dark_gray"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="反馈内容"/>


            <EditText
                android:id="@+id/custom_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:enabled="true"
                android:gravity="top"
                android:hint="输入您的反馈内容"
                android:inputType="textMultiLine"
                android:maxLines="10"
                android:minHeight="8dp"
                android:minLines="8"
                android:padding="5dp"
                android:scrollbars="vertical" />

            <TextView
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="您的反馈我们会第一时间收到,\n我们会尽快联系您，感谢您的反馈！\n我们的群号为319676310\n"
                android:layout_marginLeft="10dp"/>
            <Button
                android:id="@+id/custom_qqgroup"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点此加入客服QQ群"/>
            <Button
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/custom_submit"
                android:textColor="#FFF"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="提交"
                android:background="@color/light_blue"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>