<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.page.person_info.PersonInfoActivity"
    android:orientation="vertical">
    <!--    <View-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="20dp"-->
    <!--        android:background="@color/light_blue"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="@color/light_blue"
        android:fitsSystemWindows="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/userinfo_back"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:contentDescription="@string/todo"
            android:gravity="center_vertical"
            android:src="@drawable/back"
            android:textColor="#FFF" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="5"
            android:gravity="center"
            android:text="个人信息"
            android:textColor="#FFF"
            android:textSize="20sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1" />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:text="个人信息" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="#FFF">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="10"
                    android:gravity="start|center_vertical"
                    android:text="用户编号（唯一标识）"
                    android:textColor="@color/pure_black" />

                <TextView
                    android:id="@+id/userinfo_uid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#FFF"
                    android:gravity="start|center_vertical"
                    android:text="005xxx"
                    android:textColor="@color/background_dark_gray" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="#FFF">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="10"
                    android:gravity="start|center_vertical"
                    android:text="用户名"
                    android:textColor="@color/pure_black" />


                <TextView
                    android:id="@+id/userinfo_uname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#FFF"
                    android:gravity="start|center_vertical"
                    android:text="xxx"
                    android:textColor="@color/background_dark_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="#FFF">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="10"
                    android:gravity="start|center_vertical"
                    android:text="是否经过手机验证"
                    android:textColor="@color/pure_black" />

                <TextView
                    android:id="@+id/userinfo_phone_verify"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#FFF"
                    android:gravity="start|center_vertical"
                    android:text="18"
                    android:textColor="@color/background_dark_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="#FFF">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="10"
                    android:gravity="start|center_vertical"
                    android:text="手机号"
                    android:textColor="@color/pure_black" />

                <TextView
                    android:id="@+id/userinfo_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#FFF"
                    android:gravity="start|center_vertical"
                    android:text="xxx"
                    android:textColor="@color/background_dark_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="#FFF">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="10"
                    android:gravity="start|center_vertical"
                    android:text="新用户邀请码"
                    android:textColor="@color/pure_black" />

                <TextView
                    android:id="@+id/userinfo_invite_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#FFF"
                    android:gravity="start|center_vertical"
                    android:text="xxx"
                    android:textColor="@color/background_dark_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="#FFF">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="10"
                    android:gravity="start|center_vertical"
                    android:text="用户类型"
                    android:textColor="@color/pure_black" />

                <TextView
                    android:id="@+id/userinfo_user_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#FFF"
                    android:gravity="start|center_vertical"
                    android:text="xxx"
                    android:textColor="@color/background_dark_gray" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="#FFF">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="10"
                    android:gravity="start|center_vertical"
                    android:text="注册时间"
                    android:textColor="@color/pure_black" />

                <TextView
                    android:id="@+id/userinfo_register_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#FFF"
                    android:gravity="start|center_vertical"
                    android:text="xxx"
                    android:textColor="@color/background_dark_gray" />
            </LinearLayout>

            <Button
                android:textColor="@color/white"
                android:background="@color/light_blue"
                android:id="@+id/userinfo_update_1"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="修改个人信息"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>